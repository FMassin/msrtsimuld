#!/bin/bash
#
# $1: mseed data file
# $2: <inventory file>[,<format>] (import_inv help formats)
# $3+: msrtsimul options
# 

DB=/home/sysop/db.sqlite

IP=$( cat /etc/hosts|awk 'END{print $1}' )
echo Hello from msrtsimul\@docker, please note its IP $IP

invarray=(${2/,/ })
echo "Format ${invarray[1]} for inventory: ${invarray[0]}"
scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null  $1 ./
scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null  ${invarray[0]} ./
scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null  $3 $DB

ls $(basename $1) || exit 1
ls $(basename ${invarray[0]}) || exit 1

ls $DB && chown sysop $DB

su sysop -c "bash /usr/local/bin/playback.sh $1 $2 $DB $3 $4 $5 "
	
